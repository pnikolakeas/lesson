<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

	<persistence-unit name="DEFAULT" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>com.education.lessons.dao.model.composite.Composite</class>
		<class>com.education.lessons.dao.model.general.Country</class>
		<class>com.education.lessons.dao.model.general.Language</class>
		<class>com.education.lessons.dao.model.user.User</class>
		<class>com.education.lessons.dao.model.user.OpenID</class>
		
		<exclude-unlisted-classes />

	</persistence-unit>

</persistence>
